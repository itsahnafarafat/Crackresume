rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and update their own document.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Users can create their own document on signup.
      allow create: if request.auth != null;
    }

    // Users can perform all operations on jobs they own.
    match /jobs/{jobId} {
      allow read, write, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // Users can create new jobs.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}
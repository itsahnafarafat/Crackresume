rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    match /jobs/{jobId} {
      allow create, get, update, delete: if request.auth.uid == request.resource.data.userId;
      // Allow a user to list only their own jobs.
      // The query in the app MUST include `where('userId', '==', request.auth.uid)`.
      allow list: if request.auth != null;
    }
  }
}

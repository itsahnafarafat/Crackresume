rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read their own user document and update it.
    // They cannot delete their user document or create one for another user.
    match /users/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }

    // Users can create, read, update, and delete their own job documents.
    match /jobs/{jobId} {
      // For reads, check the `userId` on the existing document.
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      // For writes (create), check the `userId` on the incoming document.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
  }
}

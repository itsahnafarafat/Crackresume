rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the user is an admin
    function isAdmin(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.isAdmin == true;
    }

    // Users can only read/update their own document
    match /users/{userId} {
      allow read, update, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can manage their own jobs
    match /jobs/{jobId} {
      allow read, list, create, update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Admins can manage all posts
    match /posts/{postId} {
      allow read; // Anyone can read blog posts
      allow list: if isAdmin(request.auth.uid);
      allow create: if isAdmin(request.auth.uid);
      allow update, delete: if isAdmin(request.auth.uid);
    }
  }
}

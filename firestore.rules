rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and update their own profile.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Users can only manage their own jobs.
    match /jobs/{jobId} {
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      // This rule allows a user to query for the list of their own jobs.
      allow list: if request.auth != null && request.query.where[0][2] == request.auth.uid;
    }

    // Anyone can read a single blog post, but only admins can manage them.
    match /posts/{postId} {
      allow read: if true;
      // Admins can list, create, update, and delete posts.
      allow list, create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own document.
    // Any authenticated user can query the list (e.g., for mentions), but not see document contents.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow list: if request.auth != null;
    }
    
    // Users can fully manage their own job documents.
    // They can only query (list) their own jobs.
    match /jobs/{jobId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow list: if request.auth != null && request.auth.uid == request.query.filters[0].value;
    }
    
    // Anyone can read blog posts.
    // Only authenticated admins can create, update, or delete posts.
    match /posts/{postId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}

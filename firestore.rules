
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Lock down access to all documents by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to manage their own profile data
    match /users/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'jobs' collection
    match /jobs/{jobId} {
      // A user can create a job if they are signed in and the job's userId matches their own.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // A user can read, update, or delete their own job document.
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // This rule allows a user to query the 'jobs' collection, but only if they
    // are querying for their own documents.
    match /jobs/{jobId} {
      allow list: if request.auth != null && request.query.where.path == "userId" && request.query.where.op == "==" && request.query.where.value == request.auth.uid;
    }
  }
}

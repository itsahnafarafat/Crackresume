
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;
    }

    // Users can create, read, update, and delete their own job documents
    match /jobs/{jobId} {
      allow read, create, update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow list: if request.auth != null && request.query.where.get('userId') == request.auth.uid;
    }
  }
}

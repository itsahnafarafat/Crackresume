rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin status
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Users can only read their own data. New user documents are created via Firebase Auth functions, not direct writes.
    match /users/{userId} {
      allow read, update, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can manage their own jobs.
    match /jobs/{jobId} {
      allow read, list, create, update, delete: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Only admins can manage posts.
    match /posts/{postId} {
        allow read, list: if isAdmin();
        allow create: if isAdmin() && request.resource.data.date == request.time;
        allow update, delete: if isAdmin();
    }
  }
}

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and update their own user document
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Rules for the 'jobs' collection
    match /jobs/{jobId} {
      // A user can create a job for themselves
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        
      // A user can read, update or delete their own job document.
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;

      // A user can list their own jobs
      allow list: if request.auth != null && request.query.resource.data.userId == request.auth.uid;
    }
  }
}
